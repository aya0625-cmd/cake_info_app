#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 アカウント編集
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name, "名前"
          .field-input
            = f.text_field :name, placeholder: "(例)菓子 太郎"
        .field
          .field-label
            = f.label :birthday, "誕生日"
          .field-input
            = f.text_field :birthday, type: "date" 
        .field
          .field-label
            = f.label :phone_number, "電話番号"
          .field-input
            = f.text_field :phone_number
        .field
          .field-label
            = f.label :email, "メールアドレス"
          .field-input
            = f.email_field :email
        .actions
          = f.submit "更新", class: 'btn'
        %h5
          = link_to "トップページに戻る", :back, class: 'btn'