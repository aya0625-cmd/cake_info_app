.account-page
  %header#top-header 
    %p.title Heroine
    %hr.line1
    %hr.line2
    %p.sign Create Account
  .account-page__inner.user-form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        .field-label
          = f.label :name
        .field-input
          = f.text_field :name
      .field
        .field-label
          = f.label :email
        .field-input
          = f.email_field :email
      .field
        .field-label
          = f.label :password
        .field-input
          = f.password_field :password, autocomplete: "off"
      .field
        .field-label
          = f.label :password
        .field-input
          = f.password_field :password_confirmation, autocomplete: "off"
      .actions
        = f.submit "Create Account", class: 'btn'
      .login
        = render "devise/shared/links"
